        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_margin="2dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:text="Subhanallah 33" />-->

    </LinearLayout>

    <!--    app:layout_constraintBottom_toTopOf="@+id/nativeAd"-->


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".7">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:textAlignment="center" />


        <ImageView
            android:id="@+id/mainCircleIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="38dp"
            android:background="@drawable/bg_rounded_corner_main"
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/countIV"
            android:layout_width="82dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/mainCircleIV"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            app:backgroundTint="#1AD521"
            app:strokeColor="#009506"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/countMainTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/countSelectTv"
            android:layout_alignStart="@+id/mainCircleIV"
            android:layout_alignEnd="@+id/mainCircleIV"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textSize="62sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/countSelectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mainCircleIV"
            android:layout_alignEnd="@+id/mainCircleIV"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/mainCircleIV"
            app:layout_constraintStart_toStartOf="@+id/mainCircleIV"
            app:layout_constraintTop_toBottomOf="@+id/countMainTV"
            tools:text="Select :" />

        <ImageView
            android:id="@+id/resetIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/mainCircleIV"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bg_rounded_corner_reset"
            android:padding="4dp"
            android:src="@drawable/ic_refresh"
            app:layout_constraintEnd_toEndOf="@+id/mainCircleIV"
            app:layout_constraintStart_toEndOf="@+id/countIV"
            app:layout_constraintTop_toBottomOf="@+id/countMainTV"
            app:tint="@color/white" />

    </RelativeLayout>


